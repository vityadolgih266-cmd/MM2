local function ActivateAntiKick(enabled)
    AntiKickActive = enabled
    if enabled then
        LP.Idled:connect(function()
            game.VirtualUser:ClickButton2(Vector2.new())
        end)
        -- –ê–Ω—Ç–∏-–∫–∏–∫ Detection: (–º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å)
    end
end

