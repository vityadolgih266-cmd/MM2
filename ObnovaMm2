local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local root = character:WaitForChild("HumanoidRootPart")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

-- –£–õ–¨–¢–ò–ú–ê–¢–ò–í–ù–´–ô –ø–æ–∏—Å–∫ RemoteEvents
local function findRemoteForce(names)
    for _, name in ipairs(names) do
        for _, obj in ipairs(ReplicatedStorage:GetDescendants()) do
            if obj:IsA("RemoteEvent") then
                if string.find(obj.Name:lower(), name:lower()) then
                    return obj
                end
            end
        end
        -- –†–∞—Å—à–∏—Ä–µ–Ω–Ω—ã–π –ø–æ–∏—Å–∫ –≤ –¥—Ä—É–≥–∏—Ö –º–µ—Å—Ç–∞—Ö
        for _, obj in ipairs(workspace:GetDescendants()) do
            if obj:IsA("RemoteEvent") and string.find(obj.Name:lower(), name:lower()) then
                return obj
            end
        end
    end
    -- –ï—Å–ª–∏ –Ω–µ –Ω–∞—à–ª–∏ - —Å–æ–∑–¥–∞–µ–º —Ñ–µ–π–∫–æ–≤—ã–π –¥–ª—è –æ–±—Ö–æ–¥–∞ –æ—à–∏–±–æ–∫
    return Instance.new("RemoteEvent")
end

local parryRemote = findRemoteForce({"parry", "block", "deflect", "counter"})
local throwRemote = findRemoteForce({"throw", "shoot", "fire", "attack"})
local abilityRemote = findRemoteForce({"ability", "skill", "power", "ult"})
local claimRemote = findRemoteForce({"claim", "quest", "reward"})

print("Found Remotes:", parryRemote, throwRemote, abilityRemote, claimRemote)

-- –£–õ–¨–¢–ò–ú–ê–¢–ò–í–ù–´–ô –ø–æ–∏—Å–∫ –º—è—á–µ–π
local function getBallsUltimate()
    local balls = {}
    
    -- –ü–æ–∏—Å–∫ –≤–æ –≤—Å–µ—Ö –≤–æ–∑–º–æ–∂–Ω—ã—Ö –º–µ—Å—Ç–∞—Ö
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") then
            if string.find(obj.Name:lower(), "ball") or 
               string.find(obj.Name:lower(), "sphere") or
               obj.Name == "Handle" or
               obj.Shape == Enum.PartType.Ball then
                table.insert(balls, obj)
            end
        end
    end
    
    -- –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–π –ø–æ–∏—Å–∫ –ø–æ —Å–∫–æ—Ä–æ—Å—Ç–∏
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and obj.AssemblyLinearVelocity then
            if obj.AssemblyLinearVelocity.Magnitude > 10 then
                if not table.find(balls, obj) then
                    table.insert(balls, obj)
                end
            end
        end
    end
    
    return balls
end

-- Auto Farm ULTRA
spawn(function()
    while true do
        task.wait(0.1)
        if getgenv().UltimateCheat.AutoFarm then
            -- –ü–æ–∏—Å–∫ –±–ª–∏–∂–∞–π—à–µ–≥–æ –≤—Ä–∞–≥–∞
            local closestEnemy = nil
            local minDist = math.huge
            
            for _, plr in ipairs(game.Players:GetPlayers()) do
                if plr ~= player and plr.Character then
                    local enemyRoot = plr.Character:FindFirstChild("HumanoidRootPart")
                    if enemyRoot then
                        local dist = (root.Position - enemyRoot.Position).Magnitude
                        if dist < minDist then
                            minDist = dist
                            closestEnemy = enemyRoot
                        end
                    end
                end
            end
            
            if closestEnemy then
                -- –¢–µ–ª–µ–ø–æ—Ä—Ç–∞—Ü–∏—è –∫ –≤—Ä–∞–≥—É
                root.CFrame = closestEnemy.CFrame * CFrame.new(0, 0, -3)
                
                -- –ê–≤—Ç–æ-–∞—Ç–∞–∫–∞
                if throwRemote then
                    for i = 1, 3 do -- –ú—É–ª—å—Ç–∏-–≤—ã—Å—Ç—Ä–µ–ª
                        throwRemote:FireServer()
                        task.wait(0.05)
                    end
                end
            end
        end
    end
end)

-- PERFECT Auto Parry
local lastParryTime = 0
spawn(function()
    RunService.Heartbeat:Connect(function()
        if getgenv().UltimateCheat.AutoParry then
            local balls = getBallsUltimate()
            
            for _, ball in ipairs(balls) do
                if ball and ball.Parent and ball.AssemblyLinearVelocity then
                    local ballVel = ball.AssemblyLinearVelocity
                    local ballPos = ball.Position
                    local rootPos = root.Position
                    
                    local distance = (ballPos - rootPos).Magnitude
                    local directionToPlayer = (rootPos - ballPos).Unit
                    local approachSpeed = ballVel:Dot(directionToPlayer)
                    
                    -- –ü–†–ï–î–°–ö–ê–ó–ê–ù–ò–ï —Ç—Ä–∞–µ–∫—Ç–æ—Ä–∏–∏
                    local timeToHit = distance / math.max(ballVel.Magnitude, 1)
                    local predictedPosition = ballPos + ballVel * timeToHit
                    local predictedDistance = (predictedPosition - rootPos).Magnitude
                    
                    -- –£–°–ò–õ–ï–ù–ù–û–ï —É—Å–ª–æ–≤–∏–µ –¥–ª—è –ø–∞—Ä–∏—Ä–æ–≤–∞–Ω–∏—è
                    if predictedDistance < getgenv().UltimateCheat.ParryDistance and 
                       approachSpeed > 0 and 
                       timeToHit < 0.5 and
                       tick() - lastParryTime > 0.3 then
                        
                        -- –ê–í–¢–û–ú–ê–¢–ò–ß–ï–°–ö–û–ï –ø–∞—Ä–∏—Ä–æ–≤–∞–Ω–∏–µ
                        if parryRemote then
                            parryRemote:FireServer()
                        else
                            -- –ê–∫—Ç–∏–≤–∞—Ü–∏—è –≤—Å–µ—Ö –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤
                            for _, tool in ipairs(character:GetChildren()) do
                                if tool:IsA("Tool") then
                                    tool:Activate()
                                    task.wait(0.1)
                                    tool:Deactivate()
                                end
                            end
                        end
                        
                        lastParryTime = tick()
                        break
                    end
                end
            end
        end
    end)
end)

-- HYPER Auto Spam
spawn(function()
    while true do
        task.wait(0.08) -- –û—á–µ–Ω—å –±—ã—Å—Ç—Ä—ã–π —Å–ø–∞–º
        if getgenv().UltimateCheat.AutoSpam then
            -- –°–ø–∞–º –≤—Å–µ–º–∏ Remote'–∞–º–∏ –æ–¥–Ω–æ–≤—Ä–µ–º–µ–Ω–Ω–æ
            if parryRemote then
                for i = 1, 2 do
                    pcall(function() parryRemote:FireServer() end)
                end
            end
            
            if throwRemote then
                for i = 1, 2 do
                    pcall(function() throwRemote:FireServer() end)
                end
            end
            
            if abilityRemote then
                pcall(function() abilityRemote:FireServer() end)
            end
        end
    end
end)

-- ULTIMATE Ball ESP
local ballHighlights = {}
spawn(function()
    while true do
        task.wait(0.2)
        
        -- –û—á–∏—Å—Ç–∫–∞ —Å—Ç–∞—Ä—ã—Ö —Ö–∞–π–ª–∞–π—Ç–æ–≤
        for ball, highlight in pairs(ballHighlights) do
            if not ball or not ball.Parent then
                if highlight then highlight:Destroy() end
                ballHighlights[ball] = nil
            end
        end
        
        if getgenv().UltimateCheat.BallESP then
            local balls = getBallsUltimate()
            
            for _, ball in ipairs(balls) do
                if ball and ball.Parent and not ballHighlights[ball] then
                    local highlight = Instance.new("Highlight")
                    highlight.Adornee = ball
                    highlight.FillColor = Color3.fromRGB(0, 255, 0)
                    highlight.OutlineColor = Color3.fromRGB(255, 255, 0)
                    highlight.FillTransparency = 0.3
                    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
                    highlight.Parent = workspace
                    
                    -- –î–æ–±–∞–≤–ª—è–µ–º BillboardGui —Å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–µ–π
                    local billboard = Instance.new("BillboardGui")
                    billboard.Adornee = ball
                    billboard.Size = UDim2.new(0, 100, 0, 40)
                    billboard.StudsOffset = Vector3.new(0, 3, 0)
                    billboard.AlwaysOnTop = true
                    
                    local label = Instance.new("TextLabel")
                    label.Size = UDim2.new(1, 0, 1, 0)
                    label.BackgroundTransparency = 1
                    label.Text = "BALL\n" .. math.floor((ball.Position - root.Position).Magnitude) .. " studs"
                    label.TextColor3 = Color3.new(1, 1, 1)
                    label.TextStrokeTransparency = 0
                    label.Parent = billboard
                    billboard.Parent = ball
                    
                    ballHighlights[ball] = {highlight, billboard}
                end
            end
        else
            -- –ü–æ–ª–Ω–∞—è –æ—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –æ—Ç–∫–ª—é—á–µ–Ω–∏–∏
            for ball, objects in pairs(ballHighlights) do
                if objects[1] then objects[1]:Destroy() end
                if objects[2] then objects[2]:Destroy() end
            end
            ballHighlights = {}
        end
    end
end)

-- Player ESP
local playerHighlights = {}
spawn(function()
    while true do
        task.wait(0.3)
        
        for enemy, highlight in pairs(playerHighlights) do
            if not enemy or not enemy.Parent then
                if highlight then highlight:Destroy() end
                playerHighlights[enemy] = nil
            end
        end
        
        if getgenv().UltimateCheat.PlayerESP then
            for _, plr in ipairs(game.Players:GetPlayers()) do
                if plr ~= player and plr.Character then
                    local enemy = plr.Character
                    if not playerHighlights[enemy] then
                        local highlight = Instance.new("Highlight")
                        highlight.Adornee = enemy
                        highlight.FillColor = Color3.fromRGB(255, 0, 0)
                        highlight.OutlineColor = Color3.fromRGB(255, 0, 255)
                        highlight.FillTransparency = 0.4
                        highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
                        highlight.Parent = workspace
                        playerHighlights[enemy] = highlight
                    end
                end
            end
        else
            for enemy, highlight in pairs(playerHighlights) do
                if highlight then highlight:Destroy() end
            end
            playerHighlights = {}
        end
    end
end)

-- Speed Hack ULTRA
spawn(function()
    RunService.Heartbeat:Connect(function()
        if getgenv().UltimateCheat.SpeedHack and humanoid then
            humanoid.WalkSpeed = getgenv().UltimateCheat.WalkSpeed
        elseif humanoid then
            humanoid.WalkSpeed = 16
        end
    end)
end)

-- Infinite Jump PRO
UserInputService.JumpRequest:Connect(function()
    if getgenv().UltimateCheat.InfiniteJump and humanoid then
        humanoid:ChangeState("Jumping")
    end
end)

-- NoClip GOD
spawn(function()
    RunService.Stepped:Connect(function()
        if getgenv().UltimateCheat.NoClip and character then
            for _, part in ipairs(character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
        end
    end)
end)

